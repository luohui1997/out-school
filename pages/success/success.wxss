/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: row;
  /* align-items: center; */
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 17px 10px 14px 17px;
  border-radius: 50%;
}

.userinfo-nickname {
  font-size: 36rpx;
  font-weight: bold;
}
.info-school {
  margin-top: 20rpx;
  font-size: 26rpx;
}

.usermotto {
  margin-top: 200px;
}

.info-text {
  display: flex;
  flex-direction: column;
  margin-top: 34rpx;
  color: #fff;
}
.card {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  margin: 0px 34rpx 28rpx;
  border-radius: 16rpx;
  box-shadow: 6rpx #333;
}
.wish {
  margin-top: 8rpx;
  color: rgb(68, 68, 68);
  font-weight: bold;
  font-size: 38rpx;
}
.address {
  margin-top: 10rpx;
  color: rgb(136, 136, 136);
  font-size: 28rpx;
}
.time {
  margin-top: 10rpx;
  color: rgb(100, 167, 245);
  font-weight: bold;
  font-size: 36rpx;
}
.right {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-bottom: 28rpx;
  color: #fff;
  opacity: 0.5;
  font-size: 22rpx;
}
.green-right {
  width: 244rpx;
  height: 212rpx;
}